{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@assets/*": ["./app/assets/*"],
      "@components/*": ["./app/components/*"],
      "@styles/*": ["./app/styles/*"],
      "@atoms/types": ["./app/utils/types/components//atoms/index.ts"],
      "@molecules/types": ["./app/utils/types/components/molecules/index.ts"],
      "@organisms/types": ["./app/utils/types/components/organisms/index.ts"],
      "@pages/types": ["./app/utils/types/components/pages/index.ts"],
      "@server/types": ["./app/utils/types/server/index.ts"],
      "@schemas/*": ["./app/utils/schemas/*"],
      "@defaultValues": ["./app/utils/defaultValues/index.ts"],
      "@func": ["./app/utils/func/index.ts"],
      "@auth": ["./app/utils/auth/index.ts"],
      "@http": ["./app/utils/http/index.ts"],
      "@lib/*": ["./app/lib/*"],
      "@serverActions": ["./app/utils/serverActions/index.ts"],
      "@mocks/*": ["./app/utils/mock/*"],
      "@db/*": ["./app/db/*"],
      "@en": ["./app/utils/en/index.ts"],
      "provider/*": ["./app/providers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.js"],
  "exclude": ["node_modules"]
}
