{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@assets/*": ["./app/assets/*"],
      "@components/*": ["./app/components/*"],
      "@styles/*": ["./app/styles/*"],
      "@atoms/types": ["./app/utils/types/components//atoms/index.ts"],
      "@molecules/types": ["./app/utils/types/components/molecules/index.ts"],
      "@organisms/types": ["./app/utils/types/components/organisms/index.ts"],
      "@pages/types": ["./app/utils/types/components/pages/index.ts"],
      "@defaultValues": ["./app/utils/defaultValues/index.ts"],
      "@func": ["./app/utils/func/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.js"],
  "exclude": ["node_modules"]
}
